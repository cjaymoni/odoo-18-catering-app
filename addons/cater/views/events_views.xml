<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Event Booking list View -->
    <record id="catering_event_booking_list_view" model="ir.ui.view">
        <field name="name">cater.event.booking.list</field>
        <field name="model">cater.event.booking</field>
        <field name="arch" type="xml">
            <list decoration-info="state=='draft'" 
                  decoration-success="state=='confirmed'" 
                  decoration-warning="state=='in_progress'"
                  decoration-muted="state=='cancelled'">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="event_name"/>
                <field name="event_type"/>
                <field name="event_date"/>
                <field name="venue"/>
                <field name="guest_count"/>
                <field name="total_amount" widget="monetary"/>
                <field name="feedback_received" string="Feedback" widget="boolean_toggle"/>
                <field name="state" widget="badge" 
                       decoration-info="state=='draft'"
                       decoration-success="state=='confirmed'"
                       decoration-warning="state=='in_progress'"
                       decoration-muted="state=='cancelled'"/>
            </list>
        </field>
    </record>

    <!-- Event Booking Form View -->
    <record id="catering_event_booking_form_view" model="ir.ui.view">
        <field name="name">cater.event.booking.form</field>
        <field name="model">cater.event.booking</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" type="object" string="Confirm Booking" 
                            class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_start_event" type="object" string="Start Event" 
                            class="btn-primary" invisible="state != 'confirmed'"/>
                    <button name="action_complete" type="object" string="Complete Event" 
                            class="btn-success" invisible="state != 'in_progress'"/>
                    <button name="action_cancel" type="object" string="Cancel" 
                            class="btn-secondary" invisible="state not in ['draft', 'confirmed']"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,confirmed,in_progress,completed"/>
                </header>
                
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Booking Reference"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group name="basic_info">
                            <field name="partner_id" options="{'create': true, 'create_edit': true}"/>
                            <field name="partner_mobile" placeholder="e.g., +23324XXXXXXX"/>
                            <field name="event_name"/>
                            <field name="event_type"/>
                            <field name="event_date"/>
                            <field name="event_duration"/>
                        </group>
                        <group name="venue_info">
                            <field name="venue"/>
                            <field name="venue_address"/>
                            <field name="guest_count"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Menu Items" name="menu_items">
                            <field name="menu_line_ids">
                                <list editable="bottom">
                                    <field name="menu_item_id"/>
                                    <field name="quantity"/>
                                    <field name="price_unit" widget="monetary"/>
                                    <field name="subtotal" widget="monetary" sum="Total"/>
                                    <field name="notes"/>
                                    <field name="currency_id" invisible="1"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="Additional Services" name="services">
                            <field name="service_line_ids">
                                <list editable="bottom">
                                    <field name="service_id"/>
                                    <field name="quantity"/>
                                    <field name="price_unit" widget="monetary"/>
                                    <field name="subtotal" widget="monetary" sum="Total"/>
                                    <field name="notes"/>
                                    <field name="currency_id" invisible="1"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="Special Requirements" name="requirements">
                            <group>
                                <field name="special_requests" nolabel="1" placeholder="Any special requests for the event..."/>
                                <field name="dietary_restrictions" nolabel="1" placeholder="Dietary restrictions or allergies..."/>
                            </group>
                        </page>
                        
                        <page string="Communication" name="communication">
                            <group>
                                <group string="WhatsApp Notifications">
                                    <field name="whatsapp_sent"/>
                                    <field name="last_whatsapp_date"/>
                                </group>
                                <group string="Feedback Tracking">
                                    <field name="feedback_request_sent"/>
                                    <field name="feedback_request_date"/>
                                    <field name="feedback_received"/>
                                    <field name="feedback_confirmed"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                    
                    <group class="oe_subtotal_footer oe_right">
                        <field name="menu_total" widget="monetary"/>
                        <field name="service_total" widget="monetary"/>
                        <field name="subtotal" widget="monetary"/>
                        <field name="tax_amount" widget="monetary"/>
                        <div class="oe_subtotal_footer_separator">
                            <field name="total_amount" widget="monetary" class="oe_subtotal_footer_total"/>
                        </div>
                        <field name="deposit_amount" widget="monetary"/>
                        <field name="paid_amount" widget="monetary"/>
                        <field name="balance_due" widget="monetary"/>
                    </group>
                </sheet>
                
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Event Booking Search View -->
    <record id="catering_event_booking_search_view" model="ir.ui.view">
        <field name="name">cater.event.booking.search</field>
        <field name="model">cater.event.booking</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="event_name"/>
                <field name="venue"/>
                <field name="event_type"/>
                <separator/>
                
                <!-- Status Filters -->
                <filter string="Draft" name="draft" domain="[('state','=','draft')]"/>
                <filter string="Confirmed" name="confirmed" domain="[('state','=','confirmed')]"/>
                <filter string="In Progress" name="in_progress" domain="[('state','=','in_progress')]"/>
                <filter string="Completed" name="completed" domain="[('state','=','completed')]"/>
                <filter string="Cancelled" name="cancelled" domain="[('state','=','cancelled')]"/>
                <separator/>
                
                <!-- Time-based Filters -->
                <filter string="Today" name="today" 
                        domain="[('event_date','&gt;=', datetime.datetime.now().strftime('%Y-%m-%d 00:00:00')),
                                ('event_date','&lt;=', datetime.datetime.now().strftime('%Y-%m-%d 23:59:59'))]"/>
                <filter string="Tomorrow" name="tomorrow" 
                        domain="[('event_date','&gt;=', (datetime.datetime.now() + datetime.timedelta(days=1)).strftime('%Y-%m-%d 00:00:00')),
                                ('event_date','&lt;=', (datetime.datetime.now() + datetime.timedelta(days=1)).strftime('%Y-%m-%d 23:59:59'))]"/>
                <filter string="This Week" name="this_week" 
                        domain="[('event_date','&gt;=', (datetime.datetime.now() - datetime.timedelta(days=datetime.datetime.now().weekday())).strftime('%Y-%m-%d')),
                                ('event_date','&lt;=', (datetime.datetime.now() + datetime.timedelta(days=6-datetime.datetime.now().weekday())).strftime('%Y-%m-%d'))]"/>
                <filter string="Next Week" name="next_week" 
                        domain="[('event_date','&gt;=', (datetime.datetime.now() + datetime.timedelta(days=7-datetime.datetime.now().weekday())).strftime('%Y-%m-%d')),
                                ('event_date','&lt;=', (datetime.datetime.now() + datetime.timedelta(days=13-datetime.datetime.now().weekday())).strftime('%Y-%m-%d'))]"/>
                <filter string="This Month" name="this_month" 
                        domain="[('event_date','&gt;=', datetime.datetime.now().strftime('%Y-%m-01')),
                                ('event_date','&lt;=', (datetime.datetime.now().replace(day=1) + datetime.timedelta(days=32)).replace(day=1) - datetime.timedelta(days=1))]"/>
                <separator/>
                
                <!-- Business Filters -->
                <filter string="Large Events (50+ guests)" name="large_events" domain="[('guest_count','&gt;=',50)]"/>
                <filter string="High Value (GHS 5000+)" name="high_value" domain="[('total_amount','&gt;=',5000)]"/>
                <filter string="Unpaid Balance" name="unpaid" domain="[('balance_due','&gt;',0)]"/>
                <separator/>
                
                <!-- Advanced Grouping -->
                <group expand="0" string="Group By">
                    <filter string="Customer" name="group_customer" context="{'group_by':'partner_id'}"/>
                    <filter string="Event Type" name="group_event_type" context="{'group_by':'event_type'}"/>
                    <filter string="Status" name="group_state" context="{'group_by':'state'}"/>
                    <filter string="Event Date" name="group_date" context="{'group_by':'event_date'}"/>
                    <filter string="Venue" name="group_venue" context="{'group_by':'venue'}"/>
                    <filter string="Month" name="group_month" context="{'group_by':'event_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Event Booking Action -->
    <record id="catering_event_booking_action" model="ir.actions.act_window">
        <field name="name">Event Bookings</field>
        <field name="res_model">cater.event.booking</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="catering_event_booking_search_view"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first event booking!
            </p>
            <p>
                Manage all your catering bookings from weddings to corporate events.
                Track customer details, menu selections, and pricing all in one place.
            </p>
        </field>
    </record>

    <!-- Today's Events Action -->
    <record id="catering_event_booking_today_action" model="ir.actions.act_window">
        <field name="name">Today's Events</field>
        <field name="res_model">cater.event.booking</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('event_date','&gt;=', datetime.datetime.now().strftime('%Y-%m-%d 00:00:00')),
                              ('event_date','&lt;=', datetime.datetime.now().strftime('%Y-%m-%d 23:59:59'))]</field>
        <field name="context">{'search_default_today': 1}</field>
    </record>
</odoo>
