<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Feedback list View -->
    <record id="catering_feedback_list_view" model="ir.ui.view">
        <field name="name">cater.feedback.list</field>
        <field name="model">cater.feedback</field>
        <field name="arch" type="xml">
            <list decoration-success="rating=='5'" 
                  decoration-info="rating in ['3','4']" 
                  decoration-warning="rating=='2'"
                  decoration-danger="rating=='1'">
                <field name="feedback_date"/>
                <field name="partner_id"/>
                <field name="booking_id"/>
                <field name="rating" widget="priority"/>
                <field name="would_recommend"/>
                <field name="source"/>
                <field name="comments"/>
            </list>
        </field>
    </record>

    <!-- Feedback Form View -->
    <record id="catering_feedback_form_view" model="ir.ui.view">
        <field name="name">cater.feedback.form</field>
        <field name="model">cater.feedback</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            Customer Feedback
                        </h1>
                    </div>
                    
                    <group>
                        <group name="basic_info">
                            <field name="booking_id"/>
                            <field name="partner_id"/>
                            <field name="feedback_date"/>
                            <field name="source"/>
                        </group>
                        <group name="rating_info">
                            <field name="rating" widget="radio"/>
                            <field name="would_recommend"/>
                        </group>
                    </group>
                    
                    <group string="Detailed Ratings">
                        <group>
                            <field name="food_quality"/>
                            <field name="service_quality"/>
                        </group>
                        <group>
                            <field name="presentation"/>
                            <field name="timeliness"/>
                        </group>
                    </group>
                    
                    <group>
                        <field name="comments" nolabel="1" placeholder="Customer comments and feedback..."/>
                    </group>
                </sheet>
                
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Feedback Search View -->
    <record id="catering_feedback_search_view" model="ir.ui.view">
        <field name="name">cater.feedback.search</field>
        <field name="model">cater.feedback</field>
        <field name="arch" type="xml">
            <search>
                <field name="partner_id"/>
                <field name="booking_id"/>
                <field name="comments"/>
                <separator/>
                <filter string="5 Stars" name="rating_5" domain="[('rating','=','5')]"/>
                <filter string="4 Stars" name="rating_4" domain="[('rating','=','4')]"/>
                <filter string="3 Stars" name="rating_3" domain="[('rating','=','3')]"/>
                <filter string="2 Stars" name="rating_2" domain="[('rating','=','2')]"/>
                <filter string="1 Star" name="rating_1" domain="[('rating','=','1')]"/>
                <separator/>
                <filter string="Would Recommend" name="recommend" domain="[('would_recommend','=',True)]"/>
                <filter string="WhatsApp" name="whatsapp" domain="[('source','=','whatsapp')]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Customer" name="group_customer" context="{'group_by':'partner_id'}"/>
                    <filter string="Rating" name="group_rating" context="{'group_by':'rating'}"/>
                    <filter string="Source" name="group_source" context="{'group_by':'source'}"/>
                    <filter string="Month" name="group_month" context="{'group_by':'feedback_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="catering_feedback_action" model="ir.actions.act_window">
        <field name="name">Customer Feedback</field>
        <field name="res_model">cater.feedback</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="catering_feedback_search_view"/>
        <field name="context">{'search_default_rating_5': 1}</field>
    </record>
</odoo>
