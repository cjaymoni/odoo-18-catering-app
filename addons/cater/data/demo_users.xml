<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Demo users to test security groups -->
        
        <!-- Test Manager User -->
        <record id="user_catering_manager" model="res.users">
            <field name="name">Test Catering Manager</field>
            <field name="login">manager@catering.test</field>
            <field name="password">manager123</field>
            <field name="groups_id" eval="[(4, ref('catering_manager_group'))]"/>
            <field name="company_id" ref="base.main_company"/>
            <field name="company_ids" eval="[(4, ref('base.main_company'))]"/>
        </record>
        
        <!-- Test Staff User -->
        <record id="user_catering_staff" model="res.users">
            <field name="name">Test Catering Staff</field>
            <field name="login">staff@catering.test</field>
            <field name="password">staff123</field>
            <field name="groups_id" eval="[(4, ref('catering_staff_group'))]"/>
            <field name="company_id" ref="base.main_company"/>
            <field name="company_ids" eval="[(4, ref('base.main_company'))]"/>
        </record>
        
        <!-- Test Client Partner -->
        <record id="partner_catering_client" model="res.partner">
            <field name="name">Test Catering Client</field>
            <field name="email">client@catering.test</field>
            <field name="phone">+233241234567</field>
            <field name="mobile">+233241234567</field>
            <field name="is_company">False</field>
            <field name="customer_rank">1</field>
            <field name="is_catering_customer">True</field>
        </record>
        
        <!-- Test Client User -->
        <record id="user_catering_client" model="res.users">
            <field name="name">Test Catering Client</field>
            <field name="login">client@catering.test</field>
            <field name="password">client123</field>
            <field name="partner_id" ref="partner_catering_client"/>
            <field name="groups_id" eval="[(4, ref('catering_client_group'))]"/>
            <field name="company_id" ref="base.main_company"/>
            <field name="company_ids" eval="[(4, ref('base.main_company'))]"/>
        </record>
        
        <!-- Demo Booking for Client -->
        <record id="demo_booking_client" model="cater.event.booking">
            <field name="partner_id" ref="partner_catering_client"/>
            <field name="event_name">Family Birthday Celebration</field>
            <field name="event_type">birthday</field>
            <!-- Use a past date to simulate a completed event -->
            <field name="event_date">2024-12-15 18:00:00</field>
            <field name="venue">Family Home - East Legon</field>
            <field name="venue_address">Plot 123, East Legon, Accra</field>
            <field name="guest_count">25</field>
            <field name="special_requests">Please include vegetarian options and birthday cake</field>
            <field name="dietary_restrictions">No pork, some vegetarian guests</field>
            <field name="state">completed</field>
        </record>
        
        <!-- Demo Menu Line for Client Booking -->
        <record id="demo_menu_line_client" model="cater.booking.menu.line">
            <field name="booking_id" ref="demo_booking_client"/>
            <field name="menu_item_id" ref="menu_jollof_rice"/>
            <field name="quantity">25</field>
            <field name="price_unit">25.00</field>
            <field name="notes">With chicken pieces</field>
        </record>
        
        <!-- Demo Service Line for Client Booking -->
        <record id="demo_service_line_client" model="cater.booking.service.line">
            <field name="booking_id" ref="demo_booking_client"/>
            <field name="service_id" ref="service_waiter"/>
            <field name="quantity">1</field>
            <field name="price_unit">150.00</field>
            <field name="notes">For 4 hours</field>
        </record>
        
        <!-- Demo Feedback for Client -->
        <record id="demo_feedback_client" model="cater.feedback">
            <field name="booking_id" ref="demo_booking_client"/>
            <field name="rating">5</field>
            <field name="comments">Excellent service! The food was delicious and the staff was very professional.</field>
            <field name="food_quality">5</field>
            <field name="service_quality">5</field>
            <field name="presentation">5</field>
            <field name="timeliness">5</field>
            <field name="would_recommend">True</field>
            <field name="source">in_person</field>
            <!-- Set feedback date after the event date -->
            <field name="feedback_date">2024-12-16 10:00:00</field>
        </record>
        
        <!-- Assign catering groups to admin user -->
        <record id="base.user_admin" model="res.users">
            <field name="groups_id" eval="[(4, ref('catering_manager_group'))]"/>
        </record>
        
    </data>
</odoo>
