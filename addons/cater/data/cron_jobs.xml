<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Cron Job for Event Reminders -->
        <record id="catering_event_reminder_cron" model="ir.cron">
            <field name="name">Catering: Send Event Reminders</field>
            <field name="model_id" ref="model_cater_event_booking"/>
            <field name="state">code</field>
            <field name="code">model._cron_send_event_reminders()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active">True</field>
        </record>
        
        <!-- Cron Job for Feedback Collection -->
        <record id="catering_feedback_collection_cron" model="ir.cron">
            <field name="name">Catering: Collect Feedback</field>
            <field name="model_id" ref="model_cater_event_booking"/>
            <field name="state">code</field>
            <field name="code">model._cron_send_feedback_requests()</field>
            <field name="interval_number">6</field>
            <field name="interval_type">hours</field>
            <field name="active">True</field>
        </record>
    </data>
</odoo>