<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Menu Categories -->
        <record id="category_main_dishes" model="cater.menu.category">
            <field name="name">Main Dishes</field>
            <field name="sequence">10</field>
            <field name="description">Traditional Ghanaian main dishes</field>
        </record>
        
        <record id="category_rice_dishes" model="cater.menu.category">
            <field name="name">Rice Dishes</field>
            <field name="sequence">20</field>
            <field name="description">Various rice preparations</field>
        </record>
        
        <record id="category_soups_stews" model="cater.menu.category">
            <field name="name">Soups &amp; Stews</field>
            <field name="sequence">30</field>
            <field name="description">Traditional soups and stews</field>
        </record>
        
        <record id="category_beverages" model="cater.menu.category">
            <field name="name">Beverages</field>
            <field name="sequence">40</field>
            <field name="description">Drinks and beverages</field>
        </record>
        
        <record id="category_desserts" model="cater.menu.category">
            <field name="name">Desserts</field>
            <field name="sequence">50</field>
            <field name="description">Sweet treats and desserts</field>
        </record>

        <!-- Sample Menu Items -->
        <record id="menu_jollof_rice" model="cater.menu.item">
            <field name="name">Jollof Rice with Chicken</field>
            <field name="category_id" ref="category_rice_dishes"/>
            <field name="description">Perfectly spiced Jollof rice served with tender chicken</field>
            <field name="price_per_person">25.00</field>
            <field name="minimum_order">10</field>
            <field name="preparation_time">3.0</field>
        </record>
        
        <record id="menu_banku_tilapia" model="cater.menu.item">
            <field name="name">Banku with Grilled Tilapia</field>
            <field name="category_id" ref="category_main_dishes"/>
            <field name="description">Fresh banku served with grilled tilapia and pepper sauce</field>
            <field name="price_per_person">30.00</field>
            <field name="minimum_order">10</field>
            <field name="preparation_time">2.5</field>
        </record>
        
        <record id="menu_fufu_light_soup" model="cater.menu.item">
            <field name="name">Fufu with Light Soup</field>
            <field name="category_id" ref="category_soups_stews"/>
            <field name="description">Traditional fufu served with light soup and assorted meat</field>
            <field name="price_per_person">28.00</field>
            <field name="minimum_order">15</field>
            <field name="preparation_time">4.0</field>
        </record>
        
        <record id="menu_kelewele" model="cater.menu.item">
            <field name="name">Kelewele</field>
            <field name="category_id" ref="category_desserts"/>
            <field name="description">Spiced fried plantain cubes - perfect side dish</field>
            <field name="price_per_person">8.00</field>
            <field name="minimum_order">20</field>
            <field name="preparation_time">1.0</field>
            <field name="is_vegetarian">True</field>
            <field name="is_spicy">True</field>
        </record>
        
        <record id="menu_sobolo" model="cater.menu.item">
            <field name="name">Sobolo (Hibiscus Drink)</field>
            <field name="category_id" ref="category_beverages"/>
            <field name="description">Refreshing hibiscus drink with ginger and spices</field>
            <field name="price_per_person">5.00</field>
            <field name="minimum_order">10</field>
            <field name="preparation_time">0.5</field>
            <field name="is_vegetarian">True</field>
        </record>
    </data>
</odoo>